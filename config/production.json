{
  "server": {
    "port": 3004,
    "host": "0.0.0.0",
    "environment": "production",
    "maxConnections": 1000,
    "timeout": 30000,
    "keepAliveTimeout": 65000,
    "headersTimeout": 66000
  },
  "whatsapp": {
    "sessionTimeout": 300000,
    "maxRetries": 3,
    "retryDelay": 5000,
    "puppeteerOptions": {
      "headless": true,
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--disable-accelerated-2d-canvas",
        "--no-first-run",
        "--no-zygote",
        "--disable-gpu",
        "--disable-background-timer-throttling",
        "--disable-backgrounding-occluded-windows",
        "--disable-renderer-backgrounding"
      ]
    }
  },
  "agent": {
    "defaultConfig": {
      "isActive": true,
      "name": "Assistente Virtual",
      "responseDelay": 2000,
      "customPrompt": "Você é um assistente virtual prestativo e profissional.",
      "welcomeMessage": "Olá! Como posso ajudá-lo hoje?",
      "awayMessage": "No momento estou ausente, mas retornarei em breve.",
      "groupSettings": {
        "respondInGroups": false,
        "groupWhitelist": [],
        "groupBlacklist": []
      },
      "performanceSettings": {
        "maxCharacters": 2000,
        "rateLimitPerContact": 10,
        "ignoreForwarded": true,
        "ignoreMedia": false
      },
      "keywords": []
    }
  },
  "logging": {
    "level": "info",
    "file": {
      "enabled": true,
      "path": "logs/app.log",
      "maxSize": "10MB",
      "maxFiles": 5
    },
    "console": {
      "enabled": true,
      "colorize": false
    }
  },
  "security": {
    "cors": {
      "origin": ["http://localhost:5173", "http://127.0.0.1:5173"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    }
  },
  "performance": {
    "compression": true,
    "caching": {
      "enabled": true,
      "maxAge": 3600000
    },
    "clustering": {
      "enabled": false,
      "workers": "auto"
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "interval": 30000
    },
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics"
    }
  }
}